# SMTP Server Configuration
SMTP_HOST=0.0.0.0
SMTP_PORT=2525
SMTP_TIMEOUT=30s

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8080

# Security
ENABLE_TLS=false
TLS_CERT_FILE=
TLS_KEY_FILE=
API_KEY=
SMTP_USERNAME=
SMTP_PASSWORD=

# Storage
STORAGE_TYPE=memory  # Options: memory, file
STORAGE_FILE=emails.json
MAX_EMAILS=1000

# Features
ENABLE_AUTH=false
ENABLE_CORS=true
RATE_LIMIT=100  # requests per minute

# Outbound SMTP Configuration (for sending emails via Gmail)
OUTBOUND_SMTP_HOST=smtp.gmail.com
OUTBOUND_SMTP_PORT=587
OUTBOUND_SMTP_USERNAME=your-email@gmail.com
OUTBOUND_SMTP_PASSWORD=your-app-password
OUTBOUND_SMTP_FROM=your-email@gmail.com
